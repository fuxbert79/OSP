    {
      "parameters": {
        "jsCode": "const items = $input.first().json.value || [];\n\nconst bilder = items.map(item => {\n  const f = item.fields || {};\n  return {\n    id: item.id,\n    nzaId: f.NZA_ID,\n    titel: f.Title,\n    bildUrl: f.Bild_URL,\n    thumbnailUrl: f.Bild_Thumbnail || f.Bild_URL,\n    kategorie: f.Kategorie || 'Fehlerbild',\n    bemerkung: f.Bemerkung || '',\n    hochgeladenVon: f.Hochgeladen_Von,\n    hochgeladenAm: f.Hochgeladen_Am || item.createdDateTime\n  };\n});\n\nreturn [{ json: { bilder, count: bilder.length } }];"
      },
